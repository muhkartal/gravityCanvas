{
  "name": "gravity-canvas",
  "version": "0.1.0",
  "description": "A minimalist physics toy where clicks create gravity wells that swirl thousands of particles",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src/**/*.{ts,js} --fix",
    "format": "prettier --write src/**/*.{ts,js,html,css,md}",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist",
    "ci": "npm run lint && npm run type-check && npm run test:coverage && npm run build"
  },
  "keywords": [
    "physics",
    "particles",
    "gravity",
    "canvas",
    "interactive",
    "visualization",
    "zen",
    "generative-art"
  ],
  "author": "Muhammed Kartal",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/MuhammedKartal/Gravity.git"
  },
  "bugs": {
    "url": "https://github.com/MuhammedKartal/Gravity/issues"
  },
  "homepage": "https://github.com/MuhammedKartal/Gravity#readme",
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@types/node": "^22.9.0",
    "@vitest/coverage-v8": "^2.1.4",
    "@vitest/ui": "^2.1.4",
    "eslint": "^9.15.0",
    "globals": "^15.12.0",
    "jsdom": "^25.0.1",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.15.0",
    "vite": "^5.4.10",
    "vitest": "^2.1.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
